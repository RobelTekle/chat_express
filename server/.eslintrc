{
  "env": {
    "jest": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "semi": [1, "never"],
    "max-len": ["error", { "code": 80 }],
    "implicit-arrow-linebreak": 0,
    "camelcase": 0,
    "no-nested-ternary": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-confusing-arrow": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": 0
  }
}
