{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [1, "never"],
        "max-len": ["error", { "code": 80 }],
        "implicit-arrow-linebreak": 0,
        "no-console": 0,
        "camelcase": 0,
        "arrow-parens": 0
    }
}
